    <div class="panel panel-default">
        <div class="panel-body">
            <div class="tbl_day_data"></div>

            <div id="food-diary" class="container">
                <div id="food-diary" class="table-wrapper">
                    <div id="food-diary" class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h4>
                                    <b>Food Diary</b>
                                </h4>
                            </div>
                            <div class="col-sm-6">
